<%= form_for(@room) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <% if @room.errors.full_messages_for(:name).any? %>
      <span class="invalid-feedback">
        <%= @room.errors.full_messages_for(:name)[0] %>
      </span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
    <% if @room.errors.full_messages_for(:description).any? %>
      <span class="invalid-feedback">
        <%= @room.errors.full_messages_for(:description)[0] %>
      </span>
    <% end %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>