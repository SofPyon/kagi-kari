<% provide(:title, "Log in") %>
<h2 class="sessions__title">Log in</h2>

<%= form_for(:session, url: sessions_path) do |f| %>
  <div class="form-group">
    <%= f.label :screen_name, class: "sr-only" %>
    <%= f.text_field :screen_name, class: "form-control", placeholder: "ID" %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="form-group">
    <div class="form-check">
      <%= f.label :remember_me, class: "form-check-label" do %>
        <%= f.check_box :remember_me, class: "form-check-input" %>
        Remember me
      <% end %>
    </div>
  </div>
  <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
<% end %>